<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/image_article_item"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/text_article_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_article_item"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/image_article_item"
        android:layout_marginRight="16dp"
        android:layout_toStartOf="@+id/image_article_item"
        android:fontFamily="sans-serif"
        android:textSize="16sp" />

</RelativeLayout>